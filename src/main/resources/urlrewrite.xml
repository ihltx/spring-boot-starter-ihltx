<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<urlrewrite>

    <!-- 默认首页 -->
    <rule>
        <from>^/$</from>
        <to>/home/index</to>
    </rule>

    <!-- 增加请求后缀 -->
    <rule>
        <from>^(.*)\.dhtml$</from>
        <to>$1</to>
    </rule>
    <!-- 增加请求后缀 -->
    <rule>
        <from>^(.*)MP_verify_(.*?)\.txt</from>
        <to>$1/mp/MP_verify_$2.txt</to>
    </rule>
</urlrewrite>